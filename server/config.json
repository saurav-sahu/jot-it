{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3000,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false,
    "sharedMethods": {
      "patchOrCreate": false,
      "replaceOrCreate": false,
      "count": false,
      "find": false,
      "findOne": false,
      "upsert": false,
      "updateAll": false,
      "prototype.updateAttributes": false,
      "createChangeStream": false,
      "*accessToken*": false,
      "*replace*": false,
      "*upsertWithWhere*": false,
      "prototype.patchAttributes": false,
      "*reset*": false,
      "*verify*": false
    }
  }
}